{% extends 'base2.jinja' %}

{% block content %}
<h1>Kontakt bearbeiten :: {{ contact.firstname }} {{ contact.lastname }}</h1>
<p>
<form method="POST" action="{{ url_for('contact_edit', contact_id=contact.id, next=request.args.get('next')) }}">
    {{ form.hidden_tag() }}
    {{ form.lastname (type="text", class_="form-control",  placeholder="Nachname / Last name")}}
