    <span class=text-error>{{ error }}</span>
    {% endfor %}
    {% endif %}
    <br />
    {{ form.email (type="text", class_="form-control", placeholder="Email / Email")}}
    {% if form.email.errors %}
    {% for error in form.email.errors %}
    <span class=text-error>{{ error }}</span>
    {% endfor %}
    {% endif %}
    <br />
    {{ form.homepage (type="text", class_="form-control", placeholder="Homepage")}}
    {% if form.homepage.errors %}
    {% for error in form.homepage.errors %}
    <span class=text-error>{{ error }}</span>
    {% endfor %}
    {% endif %}
    <br />
    {{ form.twitter (type="text", class_="form-control", placeholder="Twitteraccount")}}
    {% if form.twitter.errors %}
    {% for error in form.twitter.errors %}
    <span class=text-error>{{ error }}</span>
    {% endfor %}
    {% endif %}
    <br />
    </div>
        <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Speichern/Save</button>
    </div>
</form>
</p>
{% endblock %}