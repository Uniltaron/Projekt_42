    {% for error in form.lastname.errors %}
    <span class=text-error>{{ error }}</span>
    {% endfor %}
    {% endif %}
    <br />
    {{ form.firstname (type="text", class_="form-control", placeholder="Vorname / First name")}}
    {% if form.firstname.errors %}
    {% for error in form.firstname.errors %}
    <span class=text-error>{{ error }}</span>
    {% endfor %}
    {% endif %}
    <br />
    {{ form.title (type="text", class_="form-control", placeholder="Titel / Title")}}
    {% if form.title.errors %}
    {% for error in form.title.errors %}
    <span class=text-error>{{ error }}</span>
    {% endfor %}
    {% endif %}
    <br />
    {{ form.street (type="text", class_="form-control", placeholder="Strasse / Street")}}
    {% if form.street.errors %}
    {% for error in form.street.errors %}
    <span class=text-error>{{ error }}</span>
    {% endfor %}
    {% endif %}
    <br />
    {{ form.zip (type="text", class_="form-control", placeholder="Postleitzahl / Postal code")}}
    {% if form.zip.errors %}
    {% for error in form.zip.errors %}
    <span class=text-error>{{ error }}</span>
    {% endfor %}
    {% endif %}
    <br />
    {{ form.city (type="text", class_="form-control", placeholder="Stadt / City")}}
    {% if form.city.errors %}
    {% for error in form.city.errors %}
    <span class=text-error>{{ error }}</span>
    {% endfor %}
    {% endif %}
    <br />
    {{ form.birthdate (type="text", class_="form-control", placeholder="Geburtstag / Birthday")}}
    {% if form.birthdate.errors %}
    {% for error in form.birthdate.errors %}
    <span class=text-error>{{ error }}</span>
    {% endfor %}
    {% endif %}
    <br />
    {{ form.landline (type="text", class_="form-control", placeholder="Festnetzanschluss / Land line")}}
    {% if form.landline.errors %}
    {% for error in form.landline.errors %}
    <span class=text-error>{{ error }}</span>
    {% endfor %}
    {% endif %}
    <br />
    {{ form.mobile_phone (type="text", class_="form-control", placeholder="Handnummer / Mobile phone number")}}
