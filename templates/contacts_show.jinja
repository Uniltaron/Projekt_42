{% extends 'base2.jinja' %}

{% block content %}
<h1>Dein Adressbuch</h1>
<p>
{% if contacts %}
<table>
<tr>
<th>Nachname</th>
<th>Vorname</th>
<th>Geburtsdatum</th>
<th>Email</th>
<th>Aktionen</th>
<th>letzter Kontakt</th>
</tr>
{% for contact in contacts %}
<tr>
<td>{{ contact.nachname }}</td>
<td>{{ contact.vorname }}</td>
<td>{{ contact.geburtstag }}</td>
<td>{{ contact.email }}</td>
<td>{{ contact.lastseen}}</td>

<td><a href="{{ url_for('contact_edit', contact_id=contact.id) }}">bearbeiten</a> | <a href="{{ url_for('contact_delete', contact_id=contact.id) }}">l&ouml;schen</a>| <a href="{{ url_for('contact_show', contact_id=contact.id) }}">anzeigen</a></td>
</tr>
{% endfor %}
</table>
{% else %}
<b>Dein Adressbuch ist noch leer. Schreib doch ein paar Kontakte rein!</b>
{% endif %}
</p>
<iframe src="https://www.google.com/calendar/embed?height=600&amp;wkst=2&amp;bgcolor=%23FFFFFF&amp;src=o1eobcqn28jf3tutcpdbahp42o%40group.calendar.google.com&amp;color=%230F4B38&amp;src=de.german%23holiday%40group.v.calendar.google.com&amp;color=%232F6309&amp;src=ht3jlfaac5lfd6263ulfh4tql8%40group.calendar.google.com&amp;color=%23333333&amp;src=e_2_de%23weeknum%40group.v.calendar.google.com&amp;color=%232952A3&amp;ctz=Europe%2FBerlin" style=" border:solid 1px #777 " width="800" height="600" frameborder="0" scrolling="no"></iframe>

{% endblock %}