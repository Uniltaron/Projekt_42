{% extends 'base2.jinja' %}

{% block content %}
<h1>Dein Adressbuch / Your addressbook</h1>
<p>
{% if contacts %}
<table class="table table-striped">
    <tr>
        <th>Nachname / Lastname</th>
        <th>Vorname / Firstname</th>
        <th>Geburtsdatum / Birthday</th>
        <th>Email</th>
        <th>Aktionen / Actions</th>
    </tr>
{% for contact in contacts %}
    <tr>
        <td>{{ contact.lastname }}</td>
        <td>{{ contact.firstname }}</td>
        <td>{{ contact.birthdate }}</td>
        <td>{{ contact.email }}</td>
        <td> <a href="{{ url_for('contact_edit', contact_id=contact.id) }}" class="btn btn-success" role="button">bearbeiten</a> <a href="{{ url_for('contact_delete', contact_id=contact.id) }}" class="btn btn-danger" role="button">l√∂schen</a> </td>

    </tr>
{% endfor %}
</table>
{% else %}
<b>Dein Adressbuch ist noch leer. Schreib doch ein paar Kontakte rein! / The addressbook is empty. Please add some contacts!</b>
{% endif %}
</p>

